<h4 class="classic-title"><span>Sign Up</span></h4>
<h2>Sign up (JobSeekers)</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

  <div class="form-inputs">
  <%= f.text_field :name, required: true, autofocus: true , placeholder: "Name"%>
    <%= f.email_field :email, required: "email", autofocus: true , placeholder: "you@gmail.com"%>
    <%= f.number_field :contact, required: true, autofocus: true , placeholder: "Contact No."%>
    <%= f.select :careerpath, [['IT','IT'],['Human Resource','Human Resource'],['Business','Business']] %>
    <%= f.password_field :password, required: true, placeholder: "Password (Minimum 6 Characters)"%>
    <%= f.password_field :password_confirmation, required: true,placeholder: "Confirm Password" %>
    <%= f.hidden_field :type, value:"JobSeeker" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign Up", class: 'btn btn-primary' %>
  </div>
<% end %>

