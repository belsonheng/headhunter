<h4 class="classic-title"><span>Forgot your password?</span></h4>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
    <i class="fa fa-envelope-o"></i><%= f.label :email, class: "col-sm-2 control-label" %><br/>
    <div class="col-sm-6">
        <%= f.email_field :email, autofocus: true , class: "form-control" , placeholder: "you@example.com", required: "email" %>
    </div>
</div>

  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-2">
    <%= f.submit "Send me reset password instructions" %>
  </div>
   </div>
<% end %>

<%= render "devise/shared/links" %>
