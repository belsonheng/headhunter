    <!-- Start Content -->
    <div id="content" style="background: url('<%= image_path('testimonials-bg3.jpg') %>');">
      <div class="container">
        <%= render "shared/messages" %>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'login-form'}) do |f| %>
          <h1>Sign In</h1>
          <% if devise_mapping.omniauthable? %>
            <div class="social">
              <ul>
                <li> 
                  <a href="http://localhost:3000/users/auth/facebook" class="facebook">
                    Facebook
                  </a>
                </li>
                <li>
                  <a href="<%= user_omniauth_path(:google_oauth2) %>" class="google-plus">
                    Google
                  </a>
                </li>
                <li>
                  <a href="http://localhost:3000/users/auth/linkedin" class="linkedin">
                    LinkedIn
                  </a>
                </li>
              </ul>
            </div>
       
            <div class="divider">
              <span>or</span>
            </div>
          <% end %>
          <div class="input-field">
            <input type="email" name="email" required placeholder="Email" />
            <input type="password" name="password" required placeholder="Password" />
            <% if devise_mapping.rememberable? %>
              <p style="margin-top: 20px;"><%= f.check_box :remember_me %> Remember me</p>
            <% end %>
            <hr/>
            <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %> 
            <% end %>
              <button id="submit" class="btn-system btn-large" type="submit" style="float: right;">Sign In</button>
          </div>
        <% end %>

        <p class="text-p">Don't have an account? <a href="<%= signup_path %>" style="text-decoration: underline;">Apply now!</a></p>

      </div>
    </div>
    <!-- End Content -->

