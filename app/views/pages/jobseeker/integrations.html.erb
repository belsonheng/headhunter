<div id="content" style="background: url('<%= image_path('testimonials-bg3.jpg') %>');">
  <%= render "shared/messages" %>
  <div class="container">
    <div class='box' style="max-width: 800px;">
      <div class="form-header"><h3>Social Media Integrations</h3></div>
      <section class="social-media-integrations" style="margin-top: 10px;">  
        <div class="col-md-3 col-sm-3 col-xs-3">
          <img alt="Google" src="<%= image_path('logos/google.png') %>" style="min-width: 98px; min-height: 34px;">
        </div>
        <div class="col-md-6 col-sm-6 col-xs-6">Enables sign-in with Google and Google Calendar integration.</div>
        <div class="col-md-3 col-sm-3 col-xs-3">
          <% if current_user.identities.where(provider: 'google').exists? %>
          <%= button_to user_google_omniauth_authorize_path, class: 'btn btn-system btn-medium btn-disconnect', method: :delete, data: {disable_with: 'Disconnecting', swal: { type: 'warning', confirm_button_color: '#EE3733', text: 'Are you sure you want to disconnect your Google account?'}} do %>Disconnect<% end %>
          <% else %>
          <%= button_to user_google_omniauth_authorize_path, class: 'btn btn-system btn-medium', data: {disable_with: 'Connect'}, method: :post do %>Connect<% end %>
          <% end %>
        </div>
      </section>
      <hr style="margin-bottom: 10px;"/>
      <section class="social-media-integrations">  
        <div class="col-md-3 col-sm-3 col-xs-3">
          <img alt="Facebook" src="<%= image_path('logos/facebook.jpg') %>" style="width: 98px; height: 34px;">
        </div>
        <div class="col-md-6 col-sm-6 col-xs-6">Enables sign-in with Facebook and imports your Facebook profile photo.</div>
        <div class="col-md-3 col-sm-3 col-xs-3">
          <% if current_user.identities.where(provider: 'facebook').exists? %>
          <%= button_to user_facebook_omniauth_authorize_path, class: 'btn btn-system btn-medium btn-disconnect', method: :delete, data: {disable_with: 'Disconnecting', swal: { type: 'warning', confirm_button_color: '#EE3733', text: 'Are you sure you want to disconnect your Facebook account?'}} do %>Disconnect<% end %>
          <% else %>
          <%= button_to user_facebook_omniauth_authorize_path, class: 'btn btn-system btn-medium', data: {disable_with: 'Connect'}, method: :post do %>Connect<% end %>
          <% end %>
        </div>
      </section>
      <hr style="margin-bottom: 10px;"/>
      <section class="social-media-integrations">  
        <div class="col-md-3 col-sm-3 col-xs-3">
          <img alt="Linkedin" src="<%= image_path('logos/linkedin.png') %>" style="width: 98px; height: 27px;">
        </div>
        <div class="col-md-6 col-sm-6 col-xs-6">Enables sign-in with LinkedIn and links your public profile.</div>
        <div class="col-md-3 col-sm-3 col-xs-3">
          <% if current_user.identities.where(provider: 'linkedin').exists? %>
          <%= button_to user_linkedin_omniauth_authorize_path, class: 'btn btn-system btn-medium btn-disconnect', method: :delete, data: {disable_with: 'Disconnecting', swal: { type: 'warning', confirm_button_color: '#EE3733', text: 'Are you sure you want to disconnect your LinkedIn account?'}} do %>Disconnect<% end %>
          <% else %>
          <%= button_to user_linkedin_omniauth_authorize_path, class: 'btn btn-system btn-medium', data: {disable_with: 'Connect'}, method: :post do %>Connect<% end %>
          <% end %>
        </div>
      </section>
    </div>
  </div>
</div>

<% content_for :script do %>
  <script type="text/javascript">
    history.replaceState ? history.replaceState(null, null, window.location.href.split('#')[0]) : window.location.hash = '';
  </script>
<% end %>    