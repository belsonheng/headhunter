<div id="content" style="background: url('<%= image_path('testimonials-bg3.jpg') %>');">
  <div class="container">
    <div class='box' style="max-width: 700px;">
      <%= simple_form_for(resource, as: resource_name, url: jobseeker_account_update_path, html: { method: :put, id: 'jobseeker-registration', multipart: true }) do |f| %>	
      <div class="form-header"><h3>My Account</h3></div>
      <div class="field-container">
        <%= f.input :email, required: true %>
        <%= f.input :password, required: true, hint: 'Update password by typing a new one above' %>
        <%= f.input :phone %>
        <%= f.hidden_field :type, value: 'jobseeker' %>
      </div>
      <hr/>
      <div class="form-footer field-container">
        <button id="submit" class="btn-system btn-large" type="submit">Save</button>
      </div>
      <% end %>
    </div>
  </div>
</div>